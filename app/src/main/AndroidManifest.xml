<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.entendiste">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Entendiste"
        android:usesCleartextTraffic="true">
        <activity android:name=".NuevaAsignaturaActivity"
            android:label="@string/title_activity_buscar"
            android:screenOrientation="portrait"></activity>
        <activity android:name=".AnswerActivity"
            android:label="@string/title_activity_answer"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".TemasActivity"
            android:label="@string/title_activity_temas"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".AsignaturasActivity"
            android:label="@string/title_activity_asignaturas"
            android:screenOrientation="portrait"/>
        <activity android:name=".LoginActivity"
            android:label="@string/title_activity_login"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait"
            android:configChanges="orientation|screenSize"> <!-- Para que no se reinicie la activity al girar el movil -->

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>